@{
    ViewBag.Title = "Join Event";
}

<h2>Join Event</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.Hidden("id", "id")
    if (ViewBag.Teams == null)
    {
        @Html.DisplayText("You currently don't have team with which you can join this event")
    }
    else
    {
        <div class="form-group">
            @Html.DropDownList("TeamPicked", new SelectList(ViewBag.Teams, "TeamId", "Name"), new { @class = "form-control" })

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Join" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index", "Events", null, new { @class = "btn btn-default" })
    </div>

}